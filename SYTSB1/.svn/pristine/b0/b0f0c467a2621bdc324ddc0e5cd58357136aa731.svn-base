html,body {overflow:hidden;}
#web{
    width: 100%;
    height: 100%;
    margin: 0 auto;
    position: absolute;
}
#header{
    width: 100%;
    height: 70px;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
    background: #fff;
}
#header img{
    width: 100%;
}
#content{
    width: 100%;
    /*height: auto;*/
    /*position: absolute;*/
    /*top: 120px;*/
    /*left: 0;*/
    /*background: #f0f0f0;*/
    /*overflow-y:scroll;*/
}
.tab{
    width: 100%;
    height: 50px;
    border-bottom: 1px solid #30a3da;
    background: #fff;
    position: fixed;
    top: 70px;
    left: 0;
    z-index: 99;
}
.tab ul li{
    float: left;
    width: 33.33%;
    height: 50px;
    line-height: 50px;
    text-align: center;
    cursor: pointer;
    color: #000;
    font-size: 1.8rem;
    font-weight: 600;
}
.active{
    border-bottom:5px solid #30a3da;
    box-sizing: border-box;
}
.handle{
    width: 100%;
    /*height: auto;*/
    background: #f0f0f0;
    display: none;
    position: absolute;
    top:120px;
    bottom:60px;border:0px solid #FF2F2F;
    overflow-y:scroll;
}
.handle ul li{
    width: 100%;
    height: 145px;
    background: #fff;
    margin-top: 2%;
    line-height: 2.5em;
    padding-top: 1px;
    position: relative;
}
.handle ul li article{
    width: 95%;
    height: 60%;
    margin: 5% auto;
}
.handleTitle{
    font-size: 1.6rem;
    color: #3d94b2;
}
.handle ul li article p{
    color: #000;
    font-size: 1.6rem;
}
.timer{
    float: right!important;
    color: #828282;
	font-size: 1.4rem!important;
}
.department{
    color: #abaaa6;
    font-size: 1.6rem;
}
.handle ul li article p small{
    color: #e89046;
    margin-left: 2%;
}
.handle ul li article p span{
    float: left;
    margin-left: 2%;
}
.city{
    width: 85%;
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}
.day{
    color: #e89046; float: right!important;
}
.Icon{
    width: 14px;
    height: 24px;
    position: absolute;
    right: 12px;
    top: 50%;
    margin-top: -12px;
}
.bottom{
    width: 100%;
    height: auto;
    background: #fff;
    margin-top: 2%;
}
.btnBg{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
    background: #f0f0f0;
    padding-bottom: 2%;
}
.btn{
    width: 95%;
    height: auto;
    margin: 0 auto;
    margin-top: 2%;
}
.btn a{
    display: inline-block;
    width: 100%;
    color: #fff;
    background: #006fa7;
    text-align: center;
    font-size: 2.0rem;
    border-radius: 10px;
    padding: 3% 0;
}
@media screen and (max-width: 325px) and (min-width: 240px){
    .handle ul li article p{
        font-size: 1.2rem;
    }
	
	.yongcar1 {display:inline-block; width:38%; overflow: hidden; text-overflow:ellipsis; white-space: nowrap;}
