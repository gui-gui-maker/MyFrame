#amc{
	position:absolute;
	width:300px;
	height:300px;
	min-height: 300px;
	left:100px;
	top:100px;
	background-color:#ccc;
	z-index:100;
	border: 1px solid #e22118; 
}
#amc div.header{
	width:100%;
	height:40px;
	color: #eee;
	cursor: move;
	background-color:gray;
}
#amc div.bzhu_box{ 
	position: absolute; 
	top:40px; 
	width:100%;
	min-height: 250px; 
	padding: 5px 0;
	z-index:110;
	/* -webkit-box-shadow: 2px 3px 0px 0px rgba(0,0,0,.15);
	box-shadow:2px 3px 0px 0px rgba(0,0,0,.15); */
	background-color:#fff;
	-moz-user-select: none;
	-webkit-user-select: none;
}
#amc div.active{
	z-index:120;
}
#amc div a{
	width:24px;
	height:24px;
	margin:8px 5px;
	display:block;
	z-index:110;
}
#amc div a.save{
	background:url(img/save-b.png) no-repeat;
	background-size:24px 24px;
	float:left;
}
#amc div a.undo{
	background:url(img/undo-b.png) no-repeat;
	background-size:24px 24px;
	float:left;
}
#amc div a.close{
	background:url(img/close-b.png) no-repeat;
	background-size:24px 24px;
	float:right;
}

	

