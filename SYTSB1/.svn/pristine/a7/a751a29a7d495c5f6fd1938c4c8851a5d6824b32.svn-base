.k-tabeffect { position: relative;top: -15px;left: -40px; width: 100%; height:50px; }
.k-tabeffect ul {display:block;width:100%; height: 100%;position:relative; /*overflow: hidden;*/}
.k-tabeffect ul , .k-tabeffect li {margin:0; padding:0; list-style:none;}
.k-tabeffect li {display:inline-block;text-align:center; }
.k-tabeffect li a { position:absolute;/*width: 100%;*/height: 100%; display: block; }
.k-tabeffect li.k-smdl a em{ display:block; width: 46px; height: 46px;position: absolute; left: 0; top:0;background: url("images/erweima_46x46.png") no-repeat 0 0;cursor: pointer; }
.k-tabeffect li.k-zhdl a em{  display:block; width: 53px;height: 53px; position: absolute; left: 0; top:0;cursor: pointer;background: url("images/tubiao_52x53.png") no-repeat; }
.k-tabeffect li a  span { font-size: 18px; font-weight: bold; color: #fff; line-height: 24px; width: 100px; position: absolute; top: 30px; left: 20px; display: none; }
.k-tabeffect li a.k-tabactive { display: none !important; }

.k-qrcode-img{width: 140px;height: 140px;margin: 0 auto;padding: 0;box-shadow: 0 0 8px #DDD; background: url("images/ereima_140x140.png") no-repeat;}
