         if( (notice_x + notice_height) <= 0 ){
        	 notice_x = 0;
         }
     };
     notice_t = setInterval(fun,100);
     
     //事件注册
     var notice_div = $("#tzgglist")[0];
     notice_div.onmouseover = function(){
    	 clearInterval(scroll_t);
     }
     notice_div.onmouseout = function(){
    	 scroll_t = setInterval(fun,100);
