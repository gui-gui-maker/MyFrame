@charset "utf-8";
.k-login-btnbox {display:none;}


/*上中下高度固定页面居中，两头白边高度浮动*/
* { margin:0; padding:0; }
body, html { margin:0; width:100%; height:100%; overflow:hidden;font-family:"Microsoft YaHei","宋体", "New York", serif; background:url(bg.jpg) no-repeat center center;background-size:cover;}
body.no-support-wpf { font-family: SimSun; }
.k-login-layer{width:100%; height:520px; position:absolute; top:50%;_ margin-top:-260px; padding:0;}
.k-login-top {width:100%; height:100px; overflow:hidden;margin: -260px 0px 0px 0px; text-align:center;_ margin-top:0px; position: absolute; top:50%; margin-top:-330px;_margin-top:-80px;}
.k-login-top-logo-text{ font-family:"Microsoft YaHei","黑体";font-size:48px; color:#fff;text-shadow:2px 2px 0px #CCC;}
.k-login-middle {width:100%; overflow:hidden;height:351px;}
.k-login-layout { height:351px; background:transparent ;}
.k-login-foot { background: transparent; width:100%; height:70px; text-align:center; color:#fff; font-size:12px; line-height:18px; position:fixed; bottom:0px; _position:absolute;text-shadow: 0 0 5px #000;}
.k-login-top-logo{ }

#k-login-top-logo-btn{ width:54px; height:60px;text-align:center; vertical-align:middle; float:left; margin:20px 5px 0 0;background:url(help.png) no-repeat bottom center;cursor:pointer;}
#k-login-top-logo-btn:hover{ background:url(help_on.png) no-repeat bottom center;}
.k-login-layout-content{margin:auto; width:990px; height:351px; position: fixed; top:50%; left:50%; margin:-200px 0 0 -520px;}
.k-login-custom_img{margin:auto; width:533px; height:338px; position:absolute; left:20px; top:6px; display:none; z-index:-1;}
.k-login-custom_mask{width:533px; height:338px; background:url(mask.png) no-repeat center center;}
.k-login-box{ width:780px; height:290px; background:url(dlgb.png) repeat; margin-left:220px; margin-top:150px;_left:50%;_margin-left:300px;_margin-top:380px;}
.k-login-box-title{width:545px; height:105px; line-height:10px;vertical-align:top; text-align:center;background:url(title_img_mz.png) no-repeat right top;}
.k-login-box-title span{ font-family:"Microsoft YaHei","黑体";font-size:48px; color:#fff;text-shadow:2px 2px 0px #CCC;display:none;}
.k-login-inputbox{width:260px; height:42px; line-height:39px; vertical-align:middle; text-align:left; padding-left:0px;font-size:14px; margin-bottom:18px; float:left;}
.k-login-inputname{width:0px; height:39px; line-height:39px; vertical-align:middle; text-align:left;font-size:14px; float:left;}
.k-login-inputname span{ display:none; border:1px solid red;}
.k-login-inputleft{width:205px; height:40px; line-height:40px; background-color:#414f63; vertical-align:middle; text-align:left;float:left; border:3px solid #CCC;}
.k-login-inputleft input{width:240px; height:40px; line-height:40px;border:0px; margin-left:3px; margin-top:-3px; background-color:#414f63; color:#999;font-size:18px;font-family:"Microsoft YaHei","黑体";border:3px solid #CCC;border-left:none;_border:none;}
.k-login-inputright{width:100px; height:20px; line-height:20px; background-color: transparent;vertical-align:middle; text-align:left; padding-left:4px;font-size:12px; float:left; color:#FF0;text-shadow: 0 0 5px #000;}
.k-login-inputyz{display:none;}
.k-login-inputyz input{ display:none;}
.k-login-inputyzimg{width:0px; height:40px; background:#fbfbfb; line-height:37px;float:left;border:0px solid #D9D9D9; border-left:none;border-radius:0px 5px 5px 0px;}
.k-login-inputbtn button{width:100px; height:40px;cursor:pointer; background:url(login.png); border:none; margin-top:3px;box-shadow: 0 0 10px #ccc;}
.k-login-inputbtn button div{color:#fff;width:92px; height:30px; line-height:30px;vertical-align:middle; text-align:center;cursor:pointer;font-size:18px;font-family:"Microsoft YaHei","黑体"; margin-bottom:3px;}
.k-login-inputbtn button[type="reset"]{ display:none;}
.k-login-inputbtn button:hover{ background:url(login_on.png);}
.k-login-style-select{display:none;}

